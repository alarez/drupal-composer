{
    "name": "drupal-settings/drupal-composer",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Daniel Noyola",
            "email": "daniel@noyola.io"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "conflict": {
        "drupal/drupal": "*"
    },
    "autoload": {
        "files": [
            "load.env.php"
        ]
    },
    "require": {
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/admin_toolbar": "^1.26",
        "drupal/core": "~8.7.0",
        "symfony/dotenv": "~3.4|~4.3"
    },
    "require-dev": {
        "drupal/coder": "^8.2",
        "drupal/console": "^1.8",
        "drush/drush": "^9",
        "kporras07/composer-symlinks": "^0.1.0@dev"
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "project-scaffold": [
            "Kporras07\\ComposerSymlinks\\ScriptHandler::createSymlinks"
        ],
        "post-install-cmd": [
            "@project-scaffold",
            "@drupal-scaffold"
        ],
        "post-update-cmd": [
            "@project-scaffold",
            "@drupal-scaffold"
        ],
        "lint:php": [
            "phpcs --standard=./vendor/drupal/coder/coder_sniffer/Drupal/ruleset.xml  ./src/theme",
            "phpcs --standard=./vendor/drupal/coder/coder_sniffer/Drupal/ruleset.xml  ./src/modules"
        ]
    },
    "extra": {
        "enable-patching": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "build/html/core": [
                "type:drupal-core"
            ],
            "build/html/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "build/html/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "build/html/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "build/html/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "build/html/drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "symlinks": {
            "src/modules": "build/html/modules/custom",
            "src/themes": "build/html/themes/custom",
            "src/profiles": "build/html/profiles/custom",
            "src/libraries": "build/html/libraries/custom",
            "src/sites/default": "build/html/sites/default",
            "src/sites/settings.common.php": "build/html/sites/settings.common.php"
        },
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../../.editorconfig",
                ".gitattributes": "../../.gitattributes"
            }
        }
    }
}
